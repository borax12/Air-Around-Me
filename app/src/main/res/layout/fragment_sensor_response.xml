<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/first_screen_margin_left"
    android:paddingRight="@dimen/first_screen_margin_left"
    tools:context=".MainActivityFragment"
    android:background="@color/sensor_response">

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:layout_gravity="bottom"
        android:layout_centerHorizontal="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cpv_indeterminate="true"
        app:cpv_color="@color/material_loader_color"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/loader_margin_bottom"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/air_quality_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/air_around_me_line"
            android:textSize="@dimen/air_quality_around_me_line"
            android:textColor="@color/main_screen_text"/>
        <TextView
            android:id="@+id/air_quality_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undefined"
            android:textSize="@dimen/Air_around_me_quality_size"
            android:textColor="@color/main_screen_text"
            android:visibility="invisible"
            android:layout_marginTop="10dp" />
        <LinearLayout
            android:id="@+id/main_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:visibility="invisible"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/aqi_bar"
                android:layout_width="150dp"
                android:layout_height="10dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:background="@drawable/bar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/air_quality_value"
                android:text="AQI: "
                android:textColor="@color/main_screen_text" />
            <TextView
                android:id="@+id/aqi_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/air_quality_value"
                android:text="200"
                android:textColor="@color/main_screen_text" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/air_quality_value"
                android:text="@string/aqi_seperator"
                android:textColor="@color/main_screen_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/air_quality_value"
                android:text="500"
                android:textColor="@color/main_screen_text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pro_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="invisible">
            <TextView
                android:id="@+id/pro_tip_bulb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/air_quality_around_me_line"
                android:text="@string/bulb"
                android:textColor="@color/main_screen_text"/>
            <TextView
                android:id="@+id/pro_tip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/air_quality_value"
                android:text="@string/protip"
                android:textColor="@color/main_screen_text"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/loader_margin_bottom">
        <Button
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/more_button_size"
            android:padding="@dimen/response_buttons_text_padding"
            android:text="MORE INFO >"
            android:textSize="@dimen/air_around_button_text_size"
            android:textColor="@color/air_around_button_color"
            android:clickable="true"
            android:background="@drawable/transparent_stroke_button"
            android:elevation="0dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/prediction_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/more_button_size"
            android:padding="@dimen/response_buttons_text_padding"
            android:text="TOMORROW?"
            android:textSize="@dimen/air_around_button_text_size"
            android:textColor="@color/air_around_button_color"
            android:clickable="true"
            android:background="@drawable/transparent_stroke_button"
            android:layout_marginLeft="10dp"
            android:elevation="0dp"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
